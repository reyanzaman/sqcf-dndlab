generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Art {
  id        String   @id @default(uuid())
  title     String
  title_Bangla String
  year      String
  year_Bangla String
  imageUrl  String
  description String
  width     Int
  height    Int
  medium    String
  medium_Bangla String
  publication String
  type      String
  type_Bangla String
  tags      String[]
  tags_Bangla String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@map("arts")
}

model BookCover {
  id        String   @id @default(uuid())
  title     String
  title_Bangla String
  author    String
  author_Bangla    String
  publisher String
  publisher_Bangla String
  date      String
  date_Bangla String
  imageUrl  String
  description String
  publication String
  type      String
  type_Bangla String
  tags      String[]
  tags_Bangla String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@map("book_covers")
}

model Poster {
  id        String   @id @default(uuid())
  title     String
  title_Bangla String
  imageUrl  String
  description String
  category      String
  tags      String[]
  tags_Bangla String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@map("posters")
}

model IllustrationCard {
  id        String   @id @default(uuid())
  title     String
  title_Bangla String
  subtitle  String
  subtitle_Bangla String
  publisher String
  publisher_Bangla String
  year      String
  year_Bangla String
  imageUrl  String
  description String
  tags      String[]
  tags_Bangla String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@map("illustrations_cards")
}
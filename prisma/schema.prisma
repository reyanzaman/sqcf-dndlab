generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Art {
  id        String   @id @default(uuid())
  title     String
  title_Bangla String
  artist    String
  year      String
  year_Bangla String
  imageUrl  String
  description String
  width     Int
  height    Int
  medium    String
  medium_Bangla String
  publication String
  type      String
  tags      String[]
  tags_Bangla String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@map("arts")
}